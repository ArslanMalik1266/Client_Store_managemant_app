            android:paddingVertical="4dp"
            android:text="BX"
            android:textColor="@color/darkGrey"
            android:textSize="10sp"
         />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_bxa"
        android:layout_width="wrap_content"
