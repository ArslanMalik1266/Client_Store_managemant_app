<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Header / User Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:cardCornerRadius="32dp"
            app:cardBackgroundColor="@color/light_green"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/tvUserInitial_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="U"
                android:textColor="@color/green"
                android:textSize="24sp"
                android:fontFamily="@font/inter_bold" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/inter_bold" />

        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@email.com"
            android:textColor="#64748B"
            android:textSize="14sp"
            android:fontFamily="@font/inter_regular" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F1F5F9"
        android:layout_marginBottom="20dp" />

    <!-- Details Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Balance: RM 0.00"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/inter_medium" />
            <TextView
                android:id="@+id/tvWalletLimit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Limit: RM 0.00"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/inter_medium" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTotalSales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Sales: RM 0.00"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/inter_medium"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvUserStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Active"
            android:textColor="@color/green"
            android:textSize="16sp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchCanWork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Allow Work Access"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/black"
        android:layout_marginBottom="24dp"
        app:thumbTint="@color/green"
        app:trackTint="@color/light_green"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditUser"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Edit Wallet / Add Credits"
        android:textAllCaps="false"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/inter_bold"
        android:textSize="12sp"/>

</LinearLayout>
